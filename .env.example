# Circles environment example
# Copy to .env and customize values as needed

# General
APP_DEBUG=true

# Database
APP_DATABASE_URL=postgresql+asyncpg://postgres:password@postgres:5432/circles

# OTP
APP_OTP_SECRET_KEY=change-me
APP_OTP_EXPIRY_MINUTES=10

# JWT
APP_JWT_SECRET_KEY=change-me
APP_JWT_ALGORITHM=HS256
APP_JWT_EXPIRY_MINUTES=30

# Storage
APP_STORAGE_BACKEND=local  # local or s3
APP_S3_BUCKET=
APP_S3_REGION=
APP_S3_ENDPOINT_URL=
APP_S3_ACCESS_KEY_ID=
APP_S3_SECRET_ACCESS_KEY=
APP_S3_PUBLIC_BASE_URL=
APP_S3_USE_PATH_STYLE=false

# Metrics
APP_METRICS_TOKEN=

# Geo / Check-ins
APP_USE_POSTGIS=true
APP_CHECKIN_ENFORCE_PROXIMITY=true
APP_CHECKIN_MAX_DISTANCE_METERS=500

# Place Data APIs
APP_FOURSQUARE_API_KEY=demo_key_for_testing
APP_USE_OPENSTREETMAP=true

# Overpass API endpoints (failover list). You can set as JSON array or comma-separated.
APP_OVERPASS_ENDPOINTS=["https://overpass-api.de/api/interpreter","https://overpass.kumi.systems/api/interpreter","https://lz4.overpass-api.de/api/interpreter"]

# DM rate limits
APP_DM_REQUESTS_PER_MIN=5
APP_DM_MESSAGES_PER_MIN=20

# Timeouts
APP_HTTP_TIMEOUT_SECONDS=30
APP_OVERPASS_TIMEOUT_SECONDS=25
APP_WS_SEND_TIMEOUT_SECONDS=5

# Enrichment
APP_ENRICH_TTL_HOT_DAYS=14
APP_ENRICH_TTL_COLD_DAYS=60
APP_ENRICH_MAX_DISTANCE_M=150
APP_ENRICH_MIN_NAME_SIM=0.65

# Auto-seeding
APP_AUTOSEED_ENABLED=true
APP_AUTOSEED_MIN_OSM_COUNT=500

# Upload limits (MB)
APP_AVATAR_MAX_MB=5
APP_PHOTO_MAX_MB=10

# External suggestions radius (meters)
APP_EXTERNAL_SUGGESTIONS_RADIUS_M=10000

# Logging sample rate (0..1)
APP_LOG_SAMPLE_RATE=0.1
